{{#if user}}

<div class="row">
	<div class="col s4 registrationForm">
	    <p>Add New User</p>
	    <form action="/register" method="post">
	        <label class="">Username:</label>
	        <input type="text" name="username" required="true"/><br/>
	        <label>Password:</label>
	        <input type="password" name="password" required="true"/>
	        <input type="hidden" value="/" name="pathName">
	        <input type="submit" value="Submit"/>
	    </form>
	</div>
</div>
 <!-- INPUT FORM - Add University -->

  <div class="row">
    <div class="col s4">
      Enter New University:
      <div class="input-field inline">
        <input id="universityName" type="text">
        <label for="universityName">University Name</label>
      </div>
      <div class="row submitButtonHolder">
        <div class="col s12 center">
          <button class="submitButton" type="submit" id="addUniversity">Submit</button>
        </div>
      </div>
    </div>
  </div>

{{^}}

<h4 class="center red-text loginMessage">Please <a href="/">login</a> to view this content</h4>

{{/if}}
